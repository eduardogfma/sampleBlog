<h1>Sample form</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" placeholder="Your post title" required>
    </div>

    <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" rows="20" name="postBody" placeholder="Your post body." ></textarea>
    </div>

    <button type="submit" class="btn btn-primary mb-2">Post</button>

</form>

